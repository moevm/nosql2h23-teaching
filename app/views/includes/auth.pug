script(src="/public/scripts/dialog.js") 
script(src="/public/scripts/db.js") 
#overlay.overlay(onclick="closeDialog()")
#admin-dialog.dialog
    i.close(class="fa-solid fa-xmark", onclick="closeDialog()")
    form#auth-form
        p#auth-err Error
        .field
            label(for="name-inp") Логин
            input(id="name-inp" type="text" name="name" placeholder="Логин")
        .field
            label(for="password-inp") Пароль
            input(id="password-inp" type="password" name="password" placeholder="Пароль")
        button(onclick="authorize(event)") Авторизоваться
div(class="import-export-btns")
    input#file(type="file" style="visibility:hidden" accept=".json" onchange='onFileChange(event)')
    button(onclick="document.getElementById('file').click()") Import
    button(onclick="exportData()") Export
div(class="roles")
    p Роль: #{admin ? "Администратор" : "Пользователь"}
    if admin
        button(onclick="logout()") Выйти
    else
        button(onclick="openDialog()") Администрирование